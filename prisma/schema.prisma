// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Submission {
  id            String   @id @default(cuid())
  firstName     String
  lastInitial   String
  email         String
  mailingAddress String
  albumName     String
  artist        String
  yearReleased  Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Page screenshot stored as base64 string
  pageScreenshot String?  // Will store the canvas as a base64 image
  
  @@map("submissions")
}
